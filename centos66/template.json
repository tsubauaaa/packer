{
  "variables": {
    "centos_version": "6.6",
    "box_version": "1.0",
    "mirror": "http://ftp.riken.jp/Linux/centos",
    "box_output_dir": "../boxes",
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "",
    "aws_vpc_id": "",
    "aws_subnet_id": "",
    "aws_ami_id": "",
    "aws_instance_role": ""
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "CentOS{{user `centos_version`}}_PackerBuild_v{{user `box_version`}}",
      "boot_wait": "10s",
      "disk_size": 512000,
      "guest_os_type": "RedHat_64",
      "output_directory": "packer-centos-{{user `centos_version`}}-x86_64-{{.Provider}}",
      "iso_checksum": "eb3c8be6ab668e6d83a118323a789e6c",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `mirror`}}/6/isos/x86_64/CentOS-{{user `centos_version`}}-x86_64-minimal.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "ssh_pty": true,
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; sudo -S sh 'shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "http_directory": "kickstart",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `aws_ami_id`}}",
      "instance_type": "t2.micro",
      "iam_instance_profile": "{{user `aws_instance_role`}}",
      "ssh_username": "root",
      "ssh_timeout": "5m",
      "ssh_pty": true,
      "tags" : {
        "Name" : "Tsuba_AMI"
      },
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "ami_name": "CentOS{{user `centos_version`}}_{{isotime \"20060102\" | clean_ami_name }}_v{{user `box_version`}}"
    },
    {
      "type": "vmware-iso",
      "version": 11,
      "vm_name": "CentOS{{user `centos_version`}}_PackerBuild_v{{user `box_version`}}",
      "boot_wait": "10s",
      "disk_size": 512000,
      "fusion_app_path": "/Applications/VMware Fusion.app",
      "guest_os_type": "centos-64",
      "output_directory": "packer-centos-{{user `centos_version`}}-x86_64-{{.Provider}}",
      "iso_checksum": "eb3c8be6ab668e6d83a118323a789e6c",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `mirror`}}/6/isos/x86_64/CentOS-{{user `centos_version`}}-x86_64-minimal.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "ssh_pty": true,
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; sudo -S sh 'shutdown.sh'",
      "tools_upload_flavor": "linux",
      "vmx_data": {
          "cpuid.coresPerSocket": "1",
          "memsize": "2048",
          "numvcpus": "1"
      },
      "http_directory": "kickstart",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    },
    {
      "type": "qemu",
      "vm_name": "CentOS{{user `centos_version`}}_PackerBuild_v{{user `box_version`}}",
      "boot_wait": "10s",
      "disk_size": 512000,
      "qemu_binary" : "/usr/libexec/qemu-kvm",
      "machine_type": "pc",
      "output_directory": "packer-centos-{{user `centos_version`}}-x86_64-{{.Provider}}",
      "iso_checksum": "eb3c8be6ab668e6d83a118323a789e6c",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `mirror`}}/6/isos/x86_64/CentOS-{{user `centos_version`}}-x86_64-minimal.iso",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "ssh_pty": true,
      "shutdown_command": "shutdown -P now",
      "format": "qcow2",
      "qemuargs": [
         [ "-m", "2048m" ],
         ["-device", "virtio-net-pci,netdev=user.0"]
      ],
      "accelerator": "kvm",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "http_directory": "kickstart",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": ["../cookbooks"],
      "run_list": [
        "yum-epel",
        "awscli",
        "jq",
        "python",
        "adduser",
        "build-essential",
        "chef_handler",
        "cron",
        "iptables",
        "logrotate::global",
        "ntp",
        "sudo",
        "selinux::disabled",
        "timezone",
        "yum-centos",
        "yum-update"
      ],
      "json": {
        "platform": "centos",
        "platform_family": "rhel",
        "authorization": {
          "adduser": {
            "users": [
              "tsuba-admin"
            ]
          },
          "sudo": {
            "users": [
              "tsuba-admin",
              "vagrant"
            ],
            "passwordless": true,
            "include_sudoers_d": true
          }
        }
      },
      "prevent_sudo": false,
      "skip_install": false
    },
    {
      "type": "file",
      "source": "../serverspec",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "scripts": [
        "../scripts/reboot.sh",
        "../scripts/vagrant.sh",
        "../scripts/builder_tools.sh",
        "../scripts/serverspec.sh",
        "../scripts/cleanup.sh"
      ],
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso","vmware-iso"],
      "output": "{{user `box_output_dir`}}/CentOS{{user `centos_version`}}_{{isotime \"20060102\" }}_{{.Provider}}_v{{user `box_version`}}.box"
    }
  ]
}
